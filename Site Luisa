    <script>
        // Admin Panel Functions
        function showAdminPanel() {
            document.getElementById('admin-panel').classList.remove('hidden');
        }

        function hideAdminPanel() {
            document.getElementById('admin-panel').classList.add('hidden');
        }

        // Logout button
        document.getElementById('logout-button').addEventListener('click', function() {
            hideAdminPanel();
        });

        // Status change handler
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('status-select')) {
                const select = e.target;
                const status = select.value;
                
                // Update select appearance based on status
                select.className = 'status-select px-2 py-1 rounded-full text-xs border-none focus:ring-2 focus:ring-purple-400';
                
                switch(status) {
                    case 'confirmed':
                        select.classList.add('bg-green-100', 'text-green-800');
                        break;
                    case 'pending':
                        select.classList.add('bg-yellow-100', 'text-yellow-800');
                        break;
                    case 'canceled':
                        select.classList.add('bg-red-100', 'text-red-800');
                        break;
                    case 'completed':
                        select.classList.add('bg-blue-100', 'text-blue-800');
                        break;
                }
                
                // Here you would typically send an AJAX request to update the status in your database
                console.log('Status changed to:', status);
            }
        });

        // Delete booking handler
        document.addEventListener('click', function(e) {
            if (e.target.closest('.delete-booking')) {
                if (confirm('Tem certeza que deseja excluir este agendamento?')) {
                    const row = e.target.closest('tr');
                    row.remove();
                    // Here you would typically send an AJAX request to delete from database
                    console.log('Booking deleted');
                }
            }
        });

        // Form submissions
        document.getElementById('add-service-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Serviço adicionado com sucesso!');
            this.reset();
        });

        document.getElementById('settings-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Configurações salvas com sucesso!');
        });
    </script>
</body>
